@model IEnumerable<SalesWebMvc19.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}
<h2>@ViewData["Title"]</h2>


<a asp-action="Create">Create New</a>
<br>

<div class="form-group">
    <table class="table table-striped table-hover">
        <thead>
            <tr class="success">
                <th>
                    @Html.DisplayNameFor(x => x.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.DateBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.BaseSalary)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.Department.Name)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(x => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.DateBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.BaseSalary)
                    </td>
                    <td>
                        @Html.DisplayFor(x => item.Department.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
